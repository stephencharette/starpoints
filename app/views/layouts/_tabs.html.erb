  <div>
    <input type="radio" name="option" id="1" class="peer hidden" />
    <label for="1" data-action="click->chart#week" class="text-xs block cursor-pointer select-none rounded p-0.5 text-center peer-checked:bg-blue-500 peer-checked:shadow-lg shadow-black peer-checked:text-white">Week</label>
  </div>

  <div>
