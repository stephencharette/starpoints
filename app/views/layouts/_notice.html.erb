<% if alert.present? %>
  <p class="py-2 px-3 bg-amber-50 mb-5 text-amber-500 font-medium rounded-lg inline-block" id="notice"><%= alert %></p>
<% elsif notice.present? %>
  <p class="py-2 px-3 bg-green-100 mb-5 text-green-600 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
