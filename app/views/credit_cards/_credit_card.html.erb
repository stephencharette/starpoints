<div id="<%= dom_id credit_card %>" class="absolute transition ease-in-out hover:-translate-y-3 duration-300 -z-[<%= credit_card.id %>]" style="top: <%= 3*index %>rem">
  <%= link_to edit_credit_card_path(credit_card) do %>
    <% if credit_card.card_image.present? %>
      <%= image_tag credit_card.card_image.image, class: 'rounded-xl' %>
    <% else %>
      <div class="relative">
        <h4 class="text-white font-semibold text-xl absolute top-3 left-4"><%= credit_card.name %></h4>
        <%= image_tag 'blank.png', class: 'rounded-xl shadow-md' %>
      </div>
    <% end %>
  <% end %>
</div>
