<div class="mt-4 max-w-sm w-full mx-auto">
  
  <div class='flex items-center'>
    <%= image_tag 'logo.png', class: 'h-16' %>
  
    <div class="ml-auto flex">
      <p>Don't have an account?</p>
      <%= link_to "Sign Up", new_user_registration_path, class: 'ml-1 text-md font-medium text-indigo-700 hover:text-indigo-900'%>
    </div>
  </div>
    
  <div class='flex items-center space-x-2 mt-10'>
    <h1 class="text-2xl font-semibold">Sign in to</h1>
    <h1 class="select-none font-brand font-bold text-4xl text-transparent bg-clip-text bg-gradient-to-r from-amber-400 to-pink-500">starpoints</h1>
  </div>
  
  <div class="mt-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'font-medium' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded w-full md:w-full' %>
      </div>

      <div class="field mt-5">
        <%= f.label :password, class: 'font-medium'  %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'rounded w-full md:w-full' %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "Sign in", class: 'btn hover:cursor-pointer w-full px-5 py-2 bg-indigo-600 text-white rounded text-sm hover:bg-indigo-800 hover:text-white cursor-pointer' %>
      </div>
    <% end %>

    <% if devise_mapping.rememberable? %>
      <div class="flex justify-end field mt-5">
        <%= link_to "Forgot password?", new_user_password_path, class: 'text-md font-medium' %>
      </div>
    <% end %>
  </div>
</div>
