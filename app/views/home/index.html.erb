<div id="metrics" data-metrics="<%= @metrics.to_json %>"></div>
<div class="w-full space-y-5">
  <div id="monthy" class="space-y-2">
    <h1 class="font-bold text-4xl">November 2022</h1>
    
    <div class="bg-white px-5 py-3 rounded-md">
      <p>Total Spending</p>
      <h2 class="font-bold text-2xl">$136.74</h2>
      
      <div class="chart-container" data-controller="chart">
        <canvas id="hero-chart" class="w-full"></canvas>
      </div>
    </div>
  </div>

  <div id="transactions">
    <h3 class="font-semibold text-2xl">Recent Transactions</h3>

    <div class="grid grid-cols-1 divide-y bg-white rounded-md">
      <div class="flex p-3">
        <div class="flex space-x-3 items-center">
          <%= image_tag 'appleshopping.jpeg', class: 'w-12 rounded' %>
          <div class="flex flex-col">
            <p class="font-semibold leading-4 text-lg">Apple Store</p>
            <p class="text-gray-700">Tuesday</p>
          </div>
        </div>
        <div class="ml-auto flex text-right items-center space-x-2">
          <div>
            <p class="text-lg">$136.74</p>
            <span class="bg-gray-300 py-0.5 px-1 text-sm rounded leading-2">3%</span>
          </div>
          <%= heroicon "chevron-right", variant: :outline, options: { class: "text-gray-700 h-6" } %>
        </div>
      </div>
    </div>
  </div>

</div>
